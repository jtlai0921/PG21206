<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<Button android:id="@+id/btn_create_account"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="@string/button_create_account" />
	<Button android:id="@+id/btn_list_account" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/button_list_account" />

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/lb_account_list" />

	<TextView android:id="@+id/txt_account_info" android:layout_width="fill_parent"
		android:layout_height="fill_parent" />


</LinearLayout>
