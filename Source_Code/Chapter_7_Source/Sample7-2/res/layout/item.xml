<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView android:id="@+id/item_file_name"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginLeft="5.0dip" android:layout_marginRight="5.0dip"
		android:textAppearance="?android:textAppearanceMedium" />

	<TextView android:id="@+id/item_file_size"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginLeft="5.0dip" android:layout_marginRight="5.0dip"
		android:textAppearance="?android:textAppearanceSmall"
		android:layout_below="@id/item_file_name" />

	<TextView android:id="@+id/item_file_date"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginLeft="5.0dip" android:layout_marginRight="5.0dip"
		android:textAppearance="?android:textAppearanceSmall"
		android:layout_below="@id/item_file_name"
		android:layout_alignParentRight="true" />


</RelativeLayout>
