<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:layout_gravity="center_horizontal">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/title"
		android:gravity="center" />
	
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/label" 
		android:layout_marginTop="30.0dip"/>
	
	<!-- 定义输入框 -->
	<EditText android:id="@+id/edit_share_data" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="10.0dip"/>
	
	<Button android:id="@+id/button_display_share_data"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/button_display" />
</LinearLayout>
