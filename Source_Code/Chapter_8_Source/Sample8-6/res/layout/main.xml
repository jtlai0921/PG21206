<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/label_source"
			android:layout_marginLeft="3.0dip" android:layout_marginTop="5.0dip"
			android:layout_marginRight="3.0dip" android:textAppearance="?android:textAppearanceMedium"
			android:layout_weight="1.0" />

		<Spinner android:id="@+id/spinner_source"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="5.0dip" android:layout_marginRight="3.0dip"
			android:layout_weight="2.0" />
	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/label_target"
			android:layout_marginLeft="3.0dip" android:layout_marginTop="5.0dip"
			android:layout_marginRight="3.0dip" android:textAppearance="?android:textAppearanceMedium"
			android:layout_weight="1.0" />

		<Spinner android:id="@+id/spinner_target"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="5.0dip" android:layout_marginRight="3.0dip"
			android:layout_weight="2.0" />
	</LinearLayout>

	<EditText android:id="@+id/txt_source" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginLeft="3.0dip"
		android:layout_marginTop="5.0dip" android:layout_marginRight="3.0dip"
		android:singleLine="true" android:minHeight="120.0dip"
		android:gravity="top" />

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/label_result"
		android:layout_marginLeft="3.0dip" android:layout_marginTop="5.0dip"
		android:layout_marginRight="3.0dip" android:textAppearance="?android:textAppearanceMedium" />
	
	<EditText android:id="@+id/translated_result" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginLeft="3.0dip"
		android:layout_marginTop="5.0dip" android:layout_marginRight="3.0dip"
		android:singleLine="true" android:minHeight="100.0dip"
		android:gravity="top" android:enabled="false"/>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Button android:id="@+id/button_translate"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginLeft="3.0dip" android:layout_marginTop="5.0dip"
			android:layout_marginRight="3.0dip" android:text="@string/button_translate"
			android:layout_weight="1.0" android:textAppearance="?android:textAppearanceMedium" />

		<Button android:id="@+id/button_clear" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginLeft="3.0dip"
			android:layout_marginTop="5.0dip" android:layout_marginRight="3.0dip"
			android:text="@string/button_clear" android:layout_weight="1.0"
			android:textAppearance="?android:textAppearanceMedium" />
	</LinearLayout>

	<TextView android:id="@+id/chinese_result"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginLeft="3.0dip" android:layout_marginTop="5.0dip"
		android:layout_marginRight="3.0dip" android:textAppearance="?android:textAppearanceMedium" />
</LinearLayout>
